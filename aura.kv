BoxLayout:
    orientation: "vertical"
    spacing: "10dp"
    padding: "10dp"
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_normal
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        id: label
        text: "Aura"
        font_style: "H1"
        halign: "center"
        valign: "middle"
        theme_text_color: "Secondary"
        size_hint_y: None
        height: self.texture_size[1]
        font_size: 50

    ScrollView:
        MDLabel:
            id: server_output
            text: ""
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1  # Imposta il colore del testo a bianco
            size_hint_y: None
            height: self.texture_size[1]

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: "48dp", "48dp"
        pos_hint: {"center_x": .5}
        # Imposta la visibilit√† iniziale a False
        active: False

    MDFloatingActionButton:
        id: record_button
        icon: "microphone"
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"center_x": .5}
        size_hint: 0.09, 0.09
        on_press: app.start_recording()
        on_release: app.stop_recording()
